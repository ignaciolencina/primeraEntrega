

<div class="col1">
  <ul id="productList">
    <h3>Catálogo de productos</h3>
    {{#each products}}
      <li>
        <strong>{{this.title}}</strong>
        / Precio: ${{this.price}} / Código: {{this.code}}
        <button class="delete-btn" data-id="{{this.id}}">Eliminar</button>
      </li>
    {{/each}}
  </ul>
</div>
<div class="col2">
  <form id="productForm">
    <h4>CARGA DE PRODUCTOS EN TIEMPO REAL</h4>
    <fieldset>
      <label for="input-title">Título</label>
      <input type="text" id="input-title" name="title" />
    </fieldset>
    <fieldset>
      <label for="input-description">Descripción</label>
      <input type="text" id="input-description" name="description" />
    </fieldset>
    <fieldset>
      <label for="input-code">Código de producto</label>
      <input type="text" id="input-code" name="code" />
    </fieldset>
    <fieldset>
      <label for="input-price">Precio</label>
      <input type="number" id="input-price" name="price" />
    </fieldset>
    <fieldset>
      <label for="input-stock">Stock inicial</label>
      <input type="number" id="input-stock" name="stock" />
    </fieldset>
    <fieldset>
      <label for="input-category">Categoria</label>
      <input type="text" id="input-category" name="category" />
    </fieldset>
    <fieldset>
      <label for="input-thumbnails">Imagenes</label>
      <input type="text" id="input-thumbnails" name="thumbnails" />
    </fieldset>
    <div class="btn-section">
      <button type="submit">Agregar</button>
    </div>
  </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>