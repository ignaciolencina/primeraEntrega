<h1>Listado de productos en tiempo real</h1>

<ul id="productList">
  {{#each products}}
    <li>
      <strong>{{this.title}}</strong>
      - Precio: ${{this.price}}
      <button id="deleteProduct">Eliminar</button>
    </li>
  {{/each}}
</ul>

<form id="productForm">
  <fieldset>
    <label for="input-title">Titulo</label>
    <input type="text" id="input-title" name="title"/>
  </fieldset>
  <fieldset>
    <label for="input-description">Descripcion</label>
    <input type="text" id="input-description" name="description"/>
  </fieldset>
  <fieldset>
    <label for="input-code">Codigo de producto</label>
    <input type="text" id="input-code" name="code"/>
  </fieldset>
  <fieldset>
    <label for="input-price">Precio</label>
    <input type="number" id="input-price" name="price"/>
  </fieldset>
  <fieldset>
    <label for="input-stock">Stock inicial</label>
    <input type="number" id="input-stock" name="stock"/>
  </fieldset>
  <fieldset>
    <label for="input-category">Categoria</label>
    <input type="text" id="input-category" name="category"/>
  </fieldset>
  <fieldset>
    <label for="input-thumbnails">Url Imagenes:</label>
    <input type="text" id="input-thumbnails" name="thumbnails"/>
  </fieldset>
  <div>
    <button type="submit">Agregar</button>
  </div>
</form>

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="../public/js/realTimeProducts.js"></script>
